<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#FFFFE8"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvIncomeTransactionIndex"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_centerVertical="true"
            android:textSize="32sp">
        </TextView>

        <LinearLayout
            android:layout_toRightOf="@+id/tvIncomeTransactionIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvIncomeTransactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-10-2021"
                android:textSize="20sp"
                android:layout_margin="12dp"
                >
            </TextView>

            <TextView
                android:id="@+id/tvIncomeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outcome: Tissue"
                android:layout_margin="12dp"
                android:textSize="20sp">
            </TextView>

            <TextView
                android:id="@+id/tvIncomeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="12dp"
                android:text="Value: ">
            </TextView>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>