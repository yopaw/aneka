<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/tvOutcomeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Outcome Name"
            android:textSize="24dp">

        </TextView>

        <Spinner
            android:id="@+id/spOutcomeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </Spinner>

        <TextView
            android:id="@+id/tvOutcomeValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outcome Value"
            android:textSize="24dp">
        </TextView>

        <EditText
            android:id="@+id/txtOutcomeValue"
            android:inputType="number"
            android:background="@drawable/bg_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <TextView
            android:id="@+id/tvTransactionNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction Note"
            android:textSize="24dp">
        </TextView>

        <EditText
            android:id="@+id/txtTransactionNote"
            android:background="@drawable/bg_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minHeight="150dp">

        </EditText>

        <TextView
            android:id="@+id/tvTransactionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction Date"
            android:textSize="24dp">
        </TextView>


        <CalendarView
            android:id="@+id/cvTransactionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </CalendarView>

        <Button
            android:id="@+id/btnAddTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Transaction">
        </Button>

    </LinearLayout>



</ScrollView>