<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#FFFFE8"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvOutcomeIndex"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="32sp">
        </TextView>

        <TextView
            android:id="@+id/tvOutcomeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outcome: Tissue"
            android:layout_toRightOf="@id/tvOutcomeIndex"
            android:layout_margin="12dp"
            android:textSize="20dp">
        </TextView>
        <TextView
            android:id="@+id/tvOutcomeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvOutcomeName"
            android:textSize="20sp"
            android:layout_margin="12dp"
            android:text="Value: "
            >
        </TextView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>